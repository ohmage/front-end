<div class="container">
    {{#if error}}
    <div class="row">
        <div class="col-lg-12">
          <div class="alert alert-danger">
            <strong>Oh snap!</strong> {{error}}
          </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    {{/if}}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <form role="form" {{action 'authenticate' on='submit'}}>
                        <fieldset>
                            <div {{bind-attr class=":form-group identificationError:has-error"}}>
                                {{#if identificationError}}
                                    <label class="control-label" for="identification">Please enter a valid E-mail address</label>
                                {{/if}}
                                {{input id='identification' placeholder='E-mail' class="form-control" value=identification autofocus="autofocus"}}
                            </div>
                            <div {{bind-attr class=":form-group passwordError:has-error"}}>
                                {{#if passwordError}}
                                    <label class="control-label" for="identification">Please enter a password</label>
                                {{/if}}
                                {{input id='password' placeholder='Password' class="form-control" type='password' value=password}}
                            </div>
                            <button class="btn btn-lg btn-success btn-block">Login</button>
                            <p class="help-block">Don't have an account? {{#link-to 'register'}}Register{{/link-to}}</p>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>