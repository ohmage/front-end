<div class="container">
    {{#if error}}
    <div class="row">
        <div class="col-lg-12">
          <div class="alert alert-danger">
            <strong>Oh snap!</strong> {{error}}
          </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    {{/if}}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <a class="btn btn-block btn-social btn-google-plus myButton" {{action 'authenticateWithGooglePlus'}}>
                            <i class="fa fa-google-plus"></i> Sign in with Google
                        </a>
                    </div>
                    <div class="form-group divider">
                      <span>
                        or
                      </span>
                    </div>
                    <form role="form" {{action 'authenticate' on='submit'}}>
                        <fieldset>
                            <div {{bind-attr class=":form-group emailError:has-error"}}>
                                {{#if emailError}}
                                    <label class="control-label" for="email">Please enter a valid E-mail address</label>
                                {{/if}}
                                {{input id='email' placeholder='E-mail' class="form-control" value=email autofocus="autofocus"}}
                            </div>
                            <div {{bind-attr class=":form-group passwordError:has-error"}}>
                                {{#if passwordError}}
                                    <label class="control-label" for="password">Please enter a password</label>
                                {{/if}}
                                {{input id='password' placeholder='Password' class="form-control" type='password' value=password}}
                            </div>
                            <button class="btn btn-lg btn-success btn-block">Login</button>
                            <p class="help-block">Don't have an account? {{#link-to 'register'}}Register{{/link-to}}</p>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>