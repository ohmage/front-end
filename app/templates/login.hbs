<div class="container">
    {{#if error}}
    <div class="row">
        <div class="col-lg-12">
          <div class="alert alert-danger">
            <strong>Oh snap!</strong> {{error}}
          </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    {{/if}}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <form role="form" {{action 'authenticate' on='submit'}}>
                        <fieldset>
                            <div class="form-group">
                                {{input id='identification' placeholder='E-mail' class="form-control" value=identification autofocus="autofocus"}}
                            </div>
                            <div class="form-group">
                                {{input id='password' placeholder='Password' class="form-control" type='password' value=password}}
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <button class="btn btn-lg btn-success btn-block">Login</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>