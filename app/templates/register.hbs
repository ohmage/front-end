<div class="container">
    {{#if error}}
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-danger">
                <strong>Oh snap!</strong> {{error}}
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    {{/if}}
    {{#if success}}
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-success">
                <strong>Success</strong> {{success}}
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    {{/if}}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create an Account</h3>
                </div>
                <div class="panel-body">
                    <form role="form" {{action 'register' on='submit'}}>
                        <fieldset>
                            <div class="form-group">
                                {{input id='full_name' placeholder='Full Name' class="form-control" value=full_name autofocus="autofocus"}}
                            </div>
                            <div {{bind-attr class=":form-group emailError:has-error"}}>
                                {{#if emailError}}
                                    <label class="control-label" for="email">Please enter a valid E-mail address</label>
                                {{/if}}
                                {{input id='email' placeholder='E-mail' class="form-control" value=email}}
                            </div>
                            <div {{bind-attr class=":form-group passwordError:has-error"}}>
                                {{#if passwordError}}
                                    <label class="control-label" for="identification">Please enter a password</label>
                                {{/if}}
                                {{input id='password' placeholder='Password' class="form-control" type='password' value=password}}
                            </div>
                            <button class="btn btn-lg btn-success btn-block">Create</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>