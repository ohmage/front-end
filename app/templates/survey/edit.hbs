<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">{{name}}</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<form role="form">
    <div class="form-group">
        <label>Name</label>
        {{input id='name' value=name class='form-control'}}
    </div>
    <div class="form-group">
        <label>Description</label>
        {{input id='description' value=description class='form-control'}}
    </div>
    <div class="form-group">
        <label>Survey Items</label>
        {{textarea id="survey_items" value=survey_items class='form-control'}}
    </div>

    <button type="submit" class="btn btn-default" {{action 'update' this}}>Save</button>
    <button type="reset" class="btn btn-default" {{action 'cancel' this}}>Cancel</button>
</form>

