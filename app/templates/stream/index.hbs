<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
          {{name}}
          {{#if this.ownedByCurrentUser}}
            {{#link-to 'stream.edit' this }}<button class="btn btn-primary pull-right">Edit</button>{{/link-to}}
          {{else}}
            {{#link-to 'stream.clone' this }}<button class="btn btn-primary pull-right">Clone</button>{{/link-to}}
          {{/if}}
        </h1>
        <p>{{description}}</p>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="panel panel-default">
  <div class="panel-heading">
      <i class="fa fa-file-code-o fa-fw"></i> Definition
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <pre>{{definition}}</pre>
  </div>
  <!-- /.panel-body -->
</div>

<div class="panel panel-default">
  <div class="panel-heading">
      <i class="fa fa-mobile fa-fw"></i> Apps
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <pre>{{apps}}</pre>
  </div>
  <!-- /.panel-body -->
</div>